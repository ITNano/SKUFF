<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/group_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingTop="5dp"
		android:textColor="@color/group_color"
		android:textSize="16sp" />
    
    <ListView android:id="@+id/group_additional_info"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="5dp"
        android:layout_marginBottom="6dp"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:choiceMode="none"
        android:listSelector="@color/transparent"
        android:orientation="vertical"
        android:layout_below="@id/group_item_name"
        android:background="@color/transparent"  />
    
    
    <Button android:id="@+id/event_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_additional_info"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/back_button" />

</RelativeLayout>
