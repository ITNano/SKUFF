<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ListView
        android:id="@+id/event_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:choiceMode="none"
        android:divider="@color/skufflist_divider"
        android:dividerHeight="1dp"    
        android:listSelector="@drawable/skufflist_selector"
        android:scrollbars="none"
        android:background="@color/skufflist_background" />
    
    <Button android:id="@+id/event_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_items"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/back_button" />
    
</RelativeLayout>
