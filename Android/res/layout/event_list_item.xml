<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/event_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:paddingTop="5dp"
		android:textColor="@color/event_color"
		android:textSize="16sp" />
    
    <TextView android:id="@+id/event_item_compulsory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/event_item_name"
        android:gravity="center_horizontal"
		android:textColor="@color/event_color_alert"
        android:textSize="10sp" />
    
    <LinearLayout android:id="@+id/event_additional_info"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="5dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:layout_below="@id/event_item_compulsory"
        android:background="@color/transparent"  />

</RelativeLayout>
